

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
<title>Email guess app</title>

<!-- CSS (load bootstrap from a CDN) -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container">
  <% const route = page == 'user-info' ? '/user-info' : '/domain-email' %>
  <form action="<%= route %>" method="POST">
    <div class="form-group">
      <label for="name">Full name</label>
      <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter full name"  value="<%= oldValue && oldValue['full_name'] ? oldValue['full_name'] : ''%>" name="full_name" required>
    </div>
    <% if(errors && errors['full_name']){%>
      <span style="color: red;"><%= errors['full_name']%></span>
      <% }%>
    
    <% if(page === 'user-info'){%>
      <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" value="<%= oldValue && oldValue['email'] ? oldValue['email'] : ''%>" name="email" required>
        </div>
        <% if(errors && errors['email']){%>
          <span style="color: red;"><%= errors['email']%></span>
          <% }%>
      <% }else{ %>
      <div class="form-group">
            <label for="domain">Domain</label>
            <input type="text" class="form-control" id="domain" placeholder="eg: com.np" value="<%= oldValue && oldValue['domain'] ? oldValue['domain'] : ''%>" name="domain" required>
          </div>
          <% if(errors && errors['domain']){%>
            <span style="color: red;"><%= errors['domain']%></span>
            <% }%>
        <%}%>
  
   
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

